    <div id="reservation">
        <h2 class="heading2">Request a free estimate</h2>
        <div class="day">
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary()

                @*@Html.LabelFor(x => x.Checkin)
                    @Html.EditorFor(x => x.Checkin)
                    <br />
